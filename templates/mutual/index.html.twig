{% extends 'base.html.twig' %}

{% block title %}Les mutuelles{% endblock %}

{% block body %}



    <div class="container-md mt-5">
        {% for message in app.flashes('succes_mutual_create') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('succes_mutual_edit') %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('succes_mutual_delete') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        <div class="row d-flex justify-content-between align-items-center">
            <div class="col-md-8">
                <h2>Les mutuelles</h2>
            </div>
            <div class="col-md-8">
                <a class="btn btn-info" href="{{ path('mutual_create') }}">création de mutuelle</a>
            </div>
        </div>
        <div class="table-responsive mt-5">
            <table class="table table-striped">
                <thead>
                <tr>
      <th scope="col">Mutuelle de</th>
      <th scope="col">Non de mutuelle</th>
      <th scope="col">pourcentage</th>
                </tr>
                </thead>
                <tbody>
                {% for mutual in mutuals %}
                    <tr>
                          <th scope="row">##</th>
      <td><p>nom de mutuelle : {{ mutual.NameMutual|capitalize }}</p></td>
      <td><p>pourcentage : {{ mutual.Percentage|capitalize }}</p></td>

                        <td class="center">
                            <div class="row d-flex justify-content-center">
                                <div class="mx-3">
                                        <a class="btn btn-warning" href="{{ path('mutual_edit', {'id' : mutual.id}) }}"><i class="fas fa-edit mr-1"></i>Éditer</a>   
                                        <a class="btn btn-danger" onclick="confirm('Supprimer les vacances ?')" href="{{ path('mutual_delete', {'id' : mutual.id}) }}"><i class="fas fa-trash mr-1"></i>Supprimer</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
